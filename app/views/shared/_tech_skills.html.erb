<div class="tech-skills">
  <h3>Technical skills</h3>
  <div class="tech-grid">
    <% @tech_skills.each_with_index do |tech_skill, index| %>
      <div class="tech-skill">
        <h4><strong><%= tech_skill[:name] %></strong></h4>

          <%= image_tag tech_skill[:image] %>
        <button type="button" class="btn btn-primary btn-block rounded-pill" data-toggle="modal" data-target="#techSkillModal<%= index + 1%>">
          More info
        </button>
      </div>

      <!-- Modal -->
        <div class="modal fade" id="techSkillModal<%= index + 1%>" tabindex="-1" aria-labelledby="techSkillModalLabel<%= index + 1%>" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="techSkillModalLabel<%= index + 1%>"><%= tech_skill[:name] %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= tech_skill[:description] %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>

    <% end %>
  </div>

<!-- Button trigger modal -->


<!-- Modal -->





</div>


