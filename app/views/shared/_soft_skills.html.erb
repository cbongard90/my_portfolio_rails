<div class="soft-skills">
  <h3>Soft skills</h3>
  <div class="soft-grid">
    <% @soft_skills.each_with_index do |soft_skill, index| %>
      <div class="soft-skill">
        <h4><%= soft_skill[:name] %></h4>
        <%= image_tag soft_skill[:image] %>
        <button type="button" class="btn btn-block rounded-pill" data-toggle="modal" data-target="#softSkillModal<%= index + 1%>">
          More info
        </button>
      </div>

      <!-- Modal -->
        <div class="modal fade" id="softSkillModal<%= index + 1%>" tabindex="-1" aria-labelledby="softSkillModalLabel<%= index + 1%>" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="softSkillModalLabel<%= index + 1%>"><%= soft_skill[:name] %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= soft_skill[:description] %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>

    <% end %>
  </div>
</div>
