
<div class="accordion" id="accordionProject">
  <% @projects.each_with_index do |project, index| %>
    <div class="card w-100">
      <div class="card-header" id="heading<%= index + 1 %>">
        <h2 class="mb-0">
          <button class="btn btn-link btn-block text-left"
          type="button"
          data-toggle="collapse"
          data-target="#collapse<%= index + 1 %>"
          aria-expanded= "true"
          aria-controls="collapse<%= index + 1 %>">
            <%= project[:name] %>
          </button>
        </h2>
      </div>
      <div class="collapse <%= "show" if index == 0%>" id="collapse<%= index + 1 %>"
      aria-labelledby="heading<%= index + 1 %>">
        <div class="card-body d-flex">
          <div class="col-6">
            <p><%= project[:description] %></p>
          </div>


<div id="carouselProject<%= index + 1%>" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% images = project[:images] %>
    <% for imageIndex in 0...images.length %>
      <li data-target="#carouselProject<%= index + 1%>" data-slide-to="<%= imageIndex %>" <%= "class= active" if imageIndex == 0 %>></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% images.each_with_index do |image, imageIndex| %>
      <div class="carousel-item <%= "active" if imageIndex == 0 %>">
        <img class="d-block w-100" src="<%= image[:url] %>" alt="<%= image[:title] %>">
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-target="#carouselProject<%= index + 1%>" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-target="#carouselProject<%= index + 1%>" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </button>
</div>












        </div>
      </div>
    </div>
  <% end %>
</div>
