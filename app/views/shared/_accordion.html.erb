
<div class="accordion" id="accordionProject">
  <% @projects.each_with_index do |project, index| %>
    <div class="card w-100">
      <div class="card-header" id="heading<%= index + 1 %>">
        <h2 class="mb-0">
          <button class="btn btn-link btn-block text-left"
          type="button"
          data-toggle="collapse"
          data-target="#collapse<%= index + 1 %>"
          aria-expanded= "true"
          aria-controls="collapse<%= index + 1 %>">
            <%= project[:name] %>
          </button>
        </h2>
      </div>
      <div class="collapse <%= "show" if index == 0%>" id="collapse<%= index + 1 %>"
      aria-labelledby="heading<%= index + 1 %>">
        <div class="card-body d-flex">
          <div class="col-6">
            <p><%= project[:description] %></p>
          </div>


<div id="carouselProject<%= index + 1%>" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselProject<%= index + 1%>" data-slide-to="0" class="active"></li>
    <li data-target="#carouselProject<%= index + 1%>" data-slide-to="1"></li>
    <li data-target="#carouselProject<%= index + 1%>" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://res.cloudinary.com/dzn5ijtvz/image/upload/v1638465915/portfolio/projects/project1_le_bateau/dashboard_rghsaa.png" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="https://res.cloudinary.com/dzn5ijtvz/image/upload/v1638465912/portfolio/projects/project3_watch_list/home_page_qbyefq.png" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="https://res.cloudinary.com/dzn5ijtvz/image/upload/v1638465919/portfolio/projects/project3_watch_list/list_show_wewv6r.png" class="d-block w-100" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-target="#carouselProject<%= index + 1%>" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-target="#carouselProject<%= index + 1%>" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </button>
</div>












        </div>
      </div>
    </div>
  <% end %>
</div>
